{
  "manifest_version": 3,
  "name": "Hybrid Thinking OS Sidecar",
  "version": "1.0.0",
  "description": "Browser extension that acts as a local API to execute AI workflow steps on live LLM websites",
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.chatgpt.com/*",
        "*://*.chat.openai.com/*",
        "*://claude.ai/*",
        "*://*.claude.ai/*",
        "*://*.console.anthropic.com/*"
      ],
      "js": ["content/content.js"],
      "type": "module"
    }
  ],
  "host_permissions": [
    "*://*.chatgpt.com/*",
    "*://*.chat.openai.com/*",
    "*://claude.ai/*",
    "*://*.claude.ai/*",
    "*://*.console.anthropic.com/*"
  ],
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://localhost:*/*",
      "http://127.0.0.1:*/*",
      "http://192.168.68.50:*/*"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/content.js",
        "chunks/*.js"
      ],
      "matches": [
        "*://*.chatgpt.com/*",
        "*://*.chat.openai.com/*",
        "*://claude.ai/*",
        "*://*.claude.ai/*",
        "*://*.console.anthropic.com/*"
      ]
    }
  ]
}