{
  "platformKey": "claude",
  "hostnames": ["claude.ai"],
  "streamingIndicatorSelector": "[data-is-streaming='true']",
  "responseContainerSelector": "div[data-is-streaming='false'] .font-claude-message .grid",
  "selectors": {
    "input": "div.ProseMirror",
    "sendButton": "button[aria-label='Send message']:not([disabled])"
  },
  "broadcastStrategy": [
    { "action": "type", "target": "input", "value": "{{prompt}}" },
    { "action": "wait", "ms": 500 },
    { "action": "click", "target": "sendButton" },
    { "action": "wait", "ms": 100 },
    { "action": "keydown", "target": "input", "key": "Enter" }
  ]
}