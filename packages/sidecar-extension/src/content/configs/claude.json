{
  "platformKey": "claude",
  "hostnames": ["claude.ai"],
  "tabActivation": {
    "enabled": true,
    "activateOnBroadcast": false,
    "activateOnHarvest": true,
    "activateOnReadinessCheck": false,
    "stabilizationDelay": 500
  },
  "selectors": {
    "readyMarker": [
      "div.ProseMirror"
    ],
    "loginMarker": [
      "button[aria-label*='Login']",
      "button:has-text('Continue with Google')"
    ],
    "newChat": [
      "a[href='/new']",
      "a[href='/chats']"
    ],
    "input": [
      "div.ProseMirror",
      "div[contenteditable='true'][data-placeholder]",
      "div[contenteditable='true']"
    ],
    "sendButton": [
      "button[aria-label='Send message']:not([disabled])",
      "button[data-testid='send-button']:not([disabled])",
      "button[aria-label='Send message']"
    ],
    "responseContainer": [
      "div[data-is-streaming='false']:last-of-type div.font-claude-message",
      "div.group:last-of-type div.font-claude-message",
      "main div[data-is-streaming='false']:last-of-type .font-claude-message",
      "main > div:last-of-type div.font-claude-message",
      "div[data-is-streaming='false']:last-of-type [class*='font-claude']",
      "main div.group:last-of-type div[class*='font-claude']",
      "div.group.relative:last-of-type div.font-claude-message",
      "main div:last-of-type div.font-claude-message"
    ],
    "conversationWrapper": [
      "main",
      "div[role='main']",
      "div.flex.flex-col.gap-3"
    ],
    "streamingIndicator": [
      "[data-is-streaming='true']",
      "div.font-claude-message [data-is-streaming='true']",
      ".animate-pulse"
    ],
    "completionMarker": [
      "button[data-testid='action-bar-copy']",
      "button[aria-label='Copy']",
      "button[title='Copy']"
    ]
  },
  "broadcastStrategy": [
    { "action": "fill", "target": "input", "value": "{{prompt}}" },
    { "action": "wait", "ms": 500 },
    { "action": "click", "target": "sendButton" }
  ],
  "harvestStrategy": {
    "method": "concurrent",
    "observeTarget": "conversationWrapper",
    "timeout": 45000,
    "maxAttempts": 8,
    "baseDelay": 1000,
    "backoffMultiplier": 1.2
  }
}