{
  "platformKey": "claude",
  "hostnames": ["claude.ai"],
  "streamingIndicatorSelector": "[data-is-streaming='true']",
  "responseContainerSelector": "div[data-is-streaming='false'] .font-claude-message .grid",
  "broadcastStrategy": [
    { "action": "type", "selector": "div.ProseMirror", "value": "{{prompt}}" },
    { "action": "wait", "ms": 500 },
    { "action": "keydown", "selector": "div.ProseMirror", "key": "Enter" }
  ]
}