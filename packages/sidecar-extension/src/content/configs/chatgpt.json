{
  "platformKey": "chatgpt",
  "hostnames": ["chat.openai.com", "chatgpt.com"],
  "streamingIndicatorSelector": ".result-thinking",
  "responseContainerSelector": "div[data-message-author-role='assistant'] div.markdown",
  "selectors": {
    "input": "#prompt-textarea",
    "sendButton": "button[data-testid='send-button']"
  },
  "broadcastStrategy": [
    { "action": "type", "target": "input", "value": "{{prompt}}" },
    { "action": "wait", "ms": 200 },
    { "action": "click", "target": "sendButton" }
  ]
}